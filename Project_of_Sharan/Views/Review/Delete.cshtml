@model Project_of_Sharan.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<h2>Delete Review</h2>

<h3>Are you sure you want to delete this review?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Review ID:
        </dt>
        <dd class="col-sm-10">
            @Model.ReviewId
        </dd>
        <dt class="col-sm-2">
            User:
        </dt>
        <dd class="col-sm-10">
            @Model.User?.Username
        </dd>
        <dt class="col-sm-2">
            Coffee Shop Item:
        </dt>
        <dd class="col-sm-10">
            @Model.CoffeeShopItemName
        </dd>
        <dt class="col-sm-2">
            Rating:
        </dt>
        <dd class="col-sm-10">
            @Model.Rating
        </dd>
        <dt class="col-sm-2">
            Review Text:
        </dt>
        <dd class="col-sm-10">
            @Model.ReviewText
        </dd>
        <dt class="col-sm-2">
            Image:
        </dt>
        <dd class="col-sm-10">
            @if (Model.ReviewImages != null && Model.ReviewImages.Any())
            {
                foreach (var reviewImage in Model.ReviewImages)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(reviewImage.ImageData)" alt="Review Image" style="width: 200px; height: auto;" />
                }
            }
            else
            {
                <p>No image available.</p>
            }
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ReviewId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="AdminIndex" class="btn btn-secondary">Cancel</a>
    </form>
</div>
