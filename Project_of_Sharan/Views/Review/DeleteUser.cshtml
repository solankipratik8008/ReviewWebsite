@model Project_of_Sharan.Models.Review

<h2>Delete Review</h2>

<div class="card">
    <div class="card-body">
        <h3 class="card-title">@Model.CoffeeShopItemName</h3>
        <p class="card-text"><strong>Rating:</strong> @Model.Rating</p>
        <p class="card-text">@Model.ReviewText</p>
        <p class="card-text text-muted">Date Posted: @Model.DatePosted.ToString("yyyy-MM-dd")</p>

        @if (Model.ReviewImages != null && Model.ReviewImages.Any())
        {
            @foreach (var image in Model.ReviewImages)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(image.ImageData)" class="img-fluid" style="max-width: 300px; height: auto;" />
            }
        }
        else
        {
            <p>No image available.</p>
        }
    </div>
</div>

<p>Are you sure you want to delete this review?</p>

<form asp-controller="Review" asp-action="DeleteUser" method="post">
    <input type="hidden" asp-for="ReviewId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="MyReviews" class="btn btn-secondary">Cancel</a>
</form>
